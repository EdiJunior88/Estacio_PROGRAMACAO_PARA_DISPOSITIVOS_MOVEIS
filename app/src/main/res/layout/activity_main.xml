<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"        android:layout_height="70dp"
        android:layout_gravity="bottom"           android:layout_marginBottom="10dp"
        android:background="#5ab"                 android:gravity="center"                  android:padding="16dp"
        android:textStyle="italic"                android:textColor="#fff"                  android:textSize="24sp"
        android:text="Universidade Estácio de Sá"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"       android:layout_height="wrap_content"
        android:layout_gravity="top|center"       android:layout_marginTop="20dp"
        android:background="#000"                 android:gravity="center"                  android:padding="16dp"
        android:textColor="#fff"                  android:textSize="24sp"
        android:text="Professor"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"       android:layout_height="wrap_content"
        android:layout_gravity="top|center"       android:layout_marginTop="250dp"
        android:background="#f84d5651"            android:gravity="center"                  android:padding="16dp"
        android:textStyle="bold"                  android:textColor="#fff"                  android:textSize="30sp"
        android:text="Edivaldo Reis Moura Junior"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"       android:layout_height="wrap_content"
        android:layout_gravity="top|right"        android:layout_marginTop="210dp"
        android:background="#f00"                 android:padding="5dp"
        android:textStyle="bold"                  android:textColor="#fff"                  android:textSize="30sp"
        android:text="Android"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"       android:layout_height="wrap_content"
        android:layout_gravity="top|center"       android:layout_marginTop="150dp"
        android:background="#00f"                 android:padding="5dp"
        android:textStyle="bold"                  android:textColor="#fff"                  android:textSize="30sp"
        android:text="Dispositivos Móveis"/>

</FrameLayout>